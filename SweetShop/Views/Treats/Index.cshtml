@{
  Layout = "_Layout";
}
@using SweetShop.Models
<h1>Treats</h1>

@if (Model.Count != 0)
{
  <table class="table table-striped">
    <tr>
      <th>Treat Name</th>
      @if (User.Identity.IsAuthenticated)
      {
        <th>Delete</th>

      }
    </tr>
    @foreach (Treat treat in Model)
    {
      <tr>
        <td>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</td>
        @if (User.Identity.IsAuthenticated)
        {
          <td>
            @using (Html.BeginForm("Delete", "Books", routeValues: new { id = treat.TreatId }))
            {
              <input type="submit" value="Delete" class="btn btn-danger">
            }
          </td>


        }
      </tr>
    }
  </table>
}
else
{
  <h4>There are no treats added.</h4>
}
@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Add Treat", "Create")</p>

}